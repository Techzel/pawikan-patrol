{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/lambda.php",
      "use": "vercel-php@0.7.4",
      "config": {
        "includeFiles": "public/build/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(css|js|images|storage)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/lambda.php"
    }
  ]
}